<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="584.0" prefWidth="929.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Visual.SceneSearchFlowerController">
   <children>
      <CheckBox fx:id="varietyCheckBox" layoutX="44.0" layoutY="64.0" mnemonicParsing="false" onAction="#selectVarietyMethod" text="Variety">
         <font>
            <Font name="Baskerville Old Face" size="20.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="freshnessCheckBox" layoutX="285.0" layoutY="64.0" mnemonicParsing="false" onAction="#selectFreshnessMethod" prefHeight="28.0" prefWidth="119.0" text="Freshness">
         <font>
            <Font name="Baskerville Old Face" size="20.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="priceCheckBox" layoutX="166.0" layoutY="64.0" mnemonicParsing="false" onAction="#selectPriceMethod" prefHeight="28.0" prefWidth="119.0" text="Price">
         <font>
            <Font name="Baskerville Old Face" size="20.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="lengthCheckBox" layoutX="430.0" layoutY="64.0" mnemonicParsing="false" onAction="#selectLengthMethod" prefHeight="28.0" prefWidth="101.0" text="Length">
         <font>
            <Font name="Baskerville Old Face" size="20.0" />
         </font>
      </CheckBox>
      <TextField fx:id="searchTextField" layoutX="566.0" layoutY="64.0" prefHeight="28.0" prefWidth="215.0" visible="false" />
      <Button fx:id="searchButton" layoutX="788.0" layoutY="64.0" mnemonicParsing="false" onAction="#submit" prefHeight="28.0" prefWidth="101.0" text="Search" visible="false">
         <font>
            <Font name="Baskerville Old Face" size="14.0" />
         </font>
      </Button>
      <ListView fx:id="flowerListView" layoutX="138.0" layoutY="155.0" prefHeight="350.0" prefWidth="739.0" />
      <Label fx:id="errorSearchLabel" alignment="CENTER" layoutX="573.0" layoutY="19.0" prefHeight="28.0" prefWidth="300.0">
         <font>
            <Font name="Baskerville Old Face" size="28.0" />
         </font>
      </Label>
      <Button fx:id="flowerBackButton" layoutX="18.0" layoutY="465.0" mnemonicParsing="false" onAction="#back" prefHeight="33.0" prefWidth="94.0" text="Back">
         <font>
            <Font name="Baskerville Old Face" size="21.0" />
         </font>
      </Button>
      <Button fx:id="addButton" layoutX="9.0" layoutY="245.0" mnemonicParsing="false" onAction="#addToBouquet" prefHeight="40.0" prefWidth="119.0" text="Add to bouquet" visible="false">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
